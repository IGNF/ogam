<?xml version="1.0"?>

<project name="OGAMCommon" default="compile" basedir=".">

	<!-- Définition des properties -->
	<property name="application.name" value="Eforest" />
	<property name="workspace.dir" value="${basedir}/../.." />
	<property name="libraries.dir" value="../../libs_java" />


	<property name="src.dir" value="./src" />
	<property name="classes.dir" value="./classes" />
	<property name="lib.dir" value="./lib" />

	<property name="classpath" value="${lib.dir}/commons-fileupload-1.2.1.jar;${java.io.tmpdir}dist/libs_java/fr.ifn.commons.jar;${libraries.dir}/import/org/apache/log4j/log4j-1.2.14.jar;${libraries.dir}/lib/servlet-api.jar;" />



	<!-- Suppression des répertoires de déploiement -->
	<target name="cleanest" description="Removes all the generated files or directories">
		<delete dir="${classes.dir}" />
		<mkdir dir="${classes.dir}" />
	</target>

	<!-- Compile les sources -->
	<target name="compile" description="Compile the sources" depends="cleanest">
		<javac srcdir="${src.dir}" destdir="${classes.dir}" debug="on" target="1.5" encoding="UTF-8" classpath="${classpath}">
			<compilerarg value="-Xlint" />
		</javac>

	</target>


</project>