{% extends "::base.html.twig" %}




{% block title %}OGAMBundle:User:showLoginForm{% endblock %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h1>Authentification</h1>

<div class="login-form"><div class="form-super-ct"><div class="form-ct">

    <form action="{{ path('ogam_user_showloginform') }}" method="post" onSubmit="cram()">
        
        <div class="text element" id="login-element">
        	<label for="username" class="required">Username:</label>
        	<input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
        
    	<div class="password element" id="password-element">
        	<label for="password" class="required">Password:</label>
        	<input type="password" id="password" name="_password" />
        </div>
    
    	<input type="hidden" name="challenge" value="{{ challenge }}" id="challenge" />
    	
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
    
    	<div class="button">
        	<input type="submit" name="submit" id="submit" value="Connexion"/>
        </div>
    </form>

</div></div></div>


{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/auth_cram.js') }}"></script>
{% endblock %}
